{
    "name": "minimalistic-clipboard",
    "version": "1.0.0",
    "description": "Minimalistic desktop clipboard manager with history, search, and snippets",
    "main": "electron/main.js",
    "scripts": {
        "start": "concurrently \"cross-env BROWSER=none npm run start:react\" \"wait-on http://localhost:3000 && cross-env ELECTRON_START_URL=http://localhost:3000 npm run start:electron\"",
        "start:react": "react-scripts start",
        "start:electron": "electron .",
        "build": "react-scripts build",
        "build:electron": "electron-builder",
        "package": "npm run build && npm run build:electron"
    },
    "keywords": [
        "clipboard",
        "organizer",
        "productivity",
        "electron",
        "react"
    ],
    "author": "",
    "license": "MIT",
    "dependencies": {
        "electron-store": "^8.1.0",
        "react": "^18.2.0",
        "react-dom": "^18.2.0"
    },
    "devDependencies": {
        "concurrently": "^8.2.2",
        "cross-env": "^10.1.0",
        "electron": "^28.0.0",
        "electron-builder": "^24.9.1",
        "react-scripts": "^5.0.1",
        "wait-on": "^7.2.0"
    },
    "build": {
        "appId": "com.minimalisticclipboard.app",
        "productName": "Minimalistic Clipboard",
        "files": [
            "build/**/*",
            "electron/**/*",
            "node_modules/**/*",
            "package.json"
        ],
        "directories": {
            "buildResources": "assets"
        },
        "win": {
            "target": [
                "nsis"
            ],
            "icon": "assets/icon.ico"
        },
        "mac": {
            "target": [
                "dmg"
            ],
            "icon": "assets/icon.icns"
        },
        "linux": {
            "target": [
                "AppImage"
            ],
            "icon": "assets/icon.png"
        }
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    }
}